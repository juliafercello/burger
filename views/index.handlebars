<div class="container">
    <div class="row">
        <div class="card col-md-4">
            <div class="card-body">
                <h5 class="card-title">Burgers to eat</h5>
                 <hr>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>{{burger_name}}
                        <button class="devour btn btn-outline-dark btn-sm" data-id="{{id}}" data-eaten="{{devoured}}">Eat Me!</button></li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="card col-md-4">
            <div class="card-body">
                <h5 class="card-title">Add a burger</h5>
                <hr>
                <form class="create-form">
                    <div class="form-group">
                        <label for="burgerName">Burger Name:</label>
                        <input type="text" id="burgerName" name="name">
                    </div>
                    <button class="btn btn-dark btn-sm" type="submit">Add Burger</button>
                </form>
            </div>
        </div>

        <div class="card col-md-4">
            <div class="card-body">
                <h5 class="card-title">Too late. Already eaten</h5>
                 <hr>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        {{burger_name}}
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>