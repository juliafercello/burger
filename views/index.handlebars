<h1>Yum. Burgers. </h1>

<div>
    <h2>Burgers to Eat</h2>

    <ul>
        {{#each burgers}}

        {{#unless devoured}}
        <li>{{burger_name}}</li>
        <button class="devour" data-id="{{id}}" data-eaten="{{devoured}}">
            eat me</button> {{/unless}}
        {{/each}}
    </ul>

</div>
<div>
    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burgerName">Burger Name:</label>
            <input type="text" id="burgerName" name="name">
        </div>

        <button type="submit">Add Burger</button>
    </form>

</div>
<div>
    <h2>Burgers that are gone</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
            {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>